<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/deco.css">
</head>
<body>

<div class="disposition">
    <h1> <%= blog.noms %> </h1>
    <h1> <%= blog.prenoms %> </h1>
    <h1> <%= blog.age %> </h1>
    <a class="dell" style="color:red;cursor: pointer;" data-doc="<%=blog._id%>">Supprimer</a>
</div>


<script>
let btn_dl=document.querySelector('a.dell')
btn_dl.addEventListener('click',suppr)

let suppr=()=>{
 let select_btn=`/blogs/${btn_dl.dataset.doc}`
 fetch(select_btn,(
  {method:'DELETE'}
  ))
 .then((result)=>{
  result.json()

 })
 .then((data)=>{

  window.location.href = data.redirect
 })
 .catch((err)=>{console.log(err);})

}

</script>
</body>
</html>